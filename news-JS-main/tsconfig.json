{
    "compilerOptions": {
        "target": "es2016",
        "rootDir": "./src",
        "allowJs": true,
        "sourceMap": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "moduleResolution": "node"
    },
    "include": ["./src/"],
    "exclude": ["node_modules/"]
}
